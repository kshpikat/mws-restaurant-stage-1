{
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "plugins": [
    "html",
    "no-loops"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "rules": {
    "semi": [2, "always"],
    "no-loops/no-loops": 2
  },
  "overrides": [{
    "files": ["sw.src.js"],
    "env": {
      "serviceworker": true
    }
  }, {
    "files": [
      "workbox-config.js",
      "gulpfile.babel.js"
    ],
    "env": {
      "node": true
    },
    "rules": {
      "no-console": 0
    }
  }],
  "globals": {
    "google": true
  }
}
