{
  "parser": "babel-eslint",
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "browser": true
  },
  "rules": {
    "linebreak-style": 0,
    "no-restricted-globals": 0,
    "comma-dangle": 0,
    "quotes": 1,
    "import/no-dynamic-require": 0,
    "no-console": 1
  },
  "plugins": [
    "html"
  ]
}
